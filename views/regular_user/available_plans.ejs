<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Workout plans</title>
    <style>
      .meal-plan,
      .workout-plan {
        background-color: #f0f4f8;
        border: 1px solid #d1d9e6;
        border-radius: 8px;
        padding: 20px;
        margin: 10px 0;
      }
      .meal-plans,
      .workout-plans {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 10px;
      }
      button {
        background-color: #076396;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        margin: auto;
      }
    </style>
  </head>
  <body>
    <%- include("../_header.ejs") %>
    <h1>
      Reach your fitness goals by choosing a meal and workout plan according to
      your needs
    </h1>

    <section>
      <div>
        <%= meals.title %>
        <h2>Meal Plans</h2>
        <div class="meal-plans">
          <% meals.forEach(meal => { %>
          <div class="meal-plan">
            <h3><%= meal.title %></h3>
            <p><%= meal.description %></p>
            <p>Target: <%= meal.target_goal %></p>
            <p>Duration: <%= meal.days_count %> Days</p>

            <form method="get" action="/regular/my_plans/<%=meal.id %>">
              <button type="submit">Choose Plan</button>
            </form>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <section>
      <h2>Workout Plans</h2>
      <div class="workout-plans">
        <% workouts.forEach(workout => { %>
        <div class="workout-plan">
          <h3><%= workout.title %></h3>
          <p><%= workout.description %></p>
          <p>Level: <%= workout.difficulty %></p>
          <p>Duration: <%= workout.duration_minutes %> Minutes</p>
          <p>Target: <%= workout.target_goal %></p>
          <button type="submit">Choose Plan</button>
          <!-- You can hook this up later -->
        </div>
        <% }) %>
      </div>
    </section>
  </body>
</html>
